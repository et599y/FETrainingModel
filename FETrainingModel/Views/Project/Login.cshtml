@model FETrainingModel.Models.Users
@{
    ViewBag.Title = "使用者登入";
}
<style>
    center ul {
        list-style: none;
        color: red;
    }
</style>
<div class="container mb-2 bg-white mx-auto">
    <div class="col-5 mx-auto">
        @using (Html.BeginForm())
        {
            <div class="row justify-content-center">
                <div class="form-group col-md-6">
                    <h3 class="col-md-9"> 登錄帳號 </h3>
                    @Html.TextBoxFor(model => model.UserName, null, new { id = "manag_name", placeholder = "Input your username …", name = "manag_name", @class = "form-control" })
                    <br>
                    @Html.PasswordFor(model => model.Password, new { id = "manag_name", placeholder = "Input your password …", name = "manag_name", @class = "form-control" })
                    <br>
                    <button class="btn btn-outline-primary my-2 font-weight-bold" id="log" name="log"
                            type="submit">
                        Login
                    </button>
                </div>
            </div>
            <center>
                @Html.ValidationSummary(true)
            </center>
        }
    </div>
</div>
