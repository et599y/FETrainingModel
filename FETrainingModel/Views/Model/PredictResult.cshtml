
@{
    ViewBag.Title = "預測結果";
}
<style>
    path {
        fill: none;
        stroke: #4682B4;
        stroke-width: 2;
    }

    /* 设置坐标样式 */
    .domain,
    tick line {
        stroke: gray;
        stroke: width;
    }

    #chartdiv {
        width: 90%;
        height: 660px;
    }

    .tooltip1 {
        position: relative;
    }
</style>

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h2>預測結果 </h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="white-box">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#menu1">預測結果圖</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu2">誤差</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="menu1" class="container tab-pane active">
                    <label style="color: rgb(71, 82, 92);">Column : </label>&nbsp;<select id="selectButton1"></select>
                    <div id="result1"></div>
                </div>
                <div id="menu2" class="container tab-pane fade">
                    <label style="color: rgb(71, 82, 92);">Select col: </Select></label>&nbsp;<select id="selectCol" class="select"></select>
                    <div id="result4"></div>
                </div>
            </div>

            <div class="white-box">
                <h3 class="box-title" style="color: midnightblue;"><i class="fa fa-download" aria-hidden="true"></i> 下載專區</h3>
                <a class="btn btn-light" style="background-color:#337ab7; color:white;margin-right:15px;" href="@ViewBag.csvPath" download="predict.csv">預測結果</a>
                <a class="btn btn-light" style="background-color:#337ab7; color:white;margin-right:15px;" href="@ViewBag.prePath" download="preprocess.csv">預處理資料集</a>
            </div>

        </div>
    </div>
</div>


<!--data visualization -->
<script src="https://d3js.org/d3.v4.js"></script>
<script src="~/Scripts/predict_result.js" type="text/javascript"></script>
<script src="~/Scripts/predictError.js" type="text/javascript"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        result_predict("@ViewBag.jsonPath");
        predict_error("@ViewBag.errorPath");
    });
</script>